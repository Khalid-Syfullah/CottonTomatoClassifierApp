<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CottonTomatoClassifierApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CottonTomatoClassifierApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewA" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/goblin_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_bordered</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="TextViewB" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="TextViewC" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/goblin_one</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="TextViewD" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lalezar</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="TextViewE" parent="Widget.MaterialComponents.TextView">
    <item name="android:textSize">22dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/lalezar</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
    </style>
</resources>